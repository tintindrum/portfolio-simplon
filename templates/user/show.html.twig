            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text">@</span>
                    <input type="text" class="form-control" value="{{ user.username }}" readonly>
                </div>
            </div>

            <div class="mb-3">
                {# <p>Nombre de commentaires post√© : {{ user.comments|length }}</p> #}
            </div>

        </div>
    </div>
</div>

