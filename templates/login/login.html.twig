{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
<div class="container-fluid">
		<div class="row justify-content-center">
			<div class="col-12 col-md-8 col-lg-8 col-xl-6 card" id="login-block">
				
					<form method="post" class="mashco">
						<h2 class="mb-5">
							<i class="fa fa-user"></i>Veuillez vous connecter</h2>
						{# {% if error %} #}
							<div class="alert alert-danger">{# {{ error.messageKey|trans(error.messageData, 'security') }} #}</div>
						{# {% endif %} #}

					{# 	{% if app.user %} #}
							<div class="mb-3">
								Vous etes connecté en tant que
								{# {{ app.user.userIdentifier }}, #}
								<a href="{# {{ path('app_logout') }} #}">Se deconnecter</a>
							</div>
					{# 	{% endif %} #}
						<p class="text-center">Pas de compte ? Vous pouvez vous
							<a href="{# {{ path('app_register') }} #}">Vous inscrire</a>
						</p>

						<div class="form-group mb-3">
							<label class="form-label text-secondary">Email</label>
							<input type="email" value="{# {{ last_username }} #}" name="email" id="inputEmail" class="form-control mb-3" autocomplete="email" required autofocus required pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,15}$"/>
						</div>
						<div class="form-group mb-3">
							<label class="form-label text-secondary">Mot de passe</label>
							<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
						</div>
						<input type="hidden" name="_csrf_token" value="{# {{ csrf_token('authenticate') }} #}">
						<div class="mt-2">
							<label>
								<input type="checkbox" name="_remember_me" checked/>
								Se souvenir de moi
							</label>
						</div>
						<p class="mt-3 mb-0">
							<a href="{# {{ path('app_forgot_password_request') }} #}">Mot de passe oublié ?</a>
						</p>
						<button class="btn btn-info mt-2" type="submit">Se connecter</button>
					</form>


				</div>
			</div>
		
		</div>
	</div>

	<div class="extra-space-l"></div>
{% endblock %}
