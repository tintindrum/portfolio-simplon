{% set article_show = path('article_show', { 'slug': article.slug }) %} 
                                    
                                      
                                      
<div class="col-lg-4 col-md-6 col-sm-6 {{ justifycenter }}">
    <div class="product-m ">
        <div class="product-m__thumb">
            {% if article.featuredImage %}
                <a href="{{ article_show }}">
                    <img
                        src="/uploads/{{ article.featuredImage.filename }}"
                        alt="{# {{ article.featuredImage.filename.altText }} #}"
                        loading="lazy"
                        width="350"
                        height="250">

                </a>

            {% endif %}

            

            <div class="product-m__add-cart">

                <a class="btn--e-brand" href="{{ article_show }}">Voir le projet</a>
            </div>
        </div>

        <div class="product-m__content">
            <div class="product-m__category">
                <a href="shop-side-version-2.html"></a>
            </div>
            <div class="product-m__name">

                <a class="text-decoration-none" href="{{ article_show }}">{{ article.title }}</a>

                <div class="product-m__hover">
                    <div class="product-m__preview-description">

                        <span>{{ article.featuredText ?: article.content|striptags|slice(0, 130) ~ '...' }}</span>

                    </div>
                    {# <div class="product-m__wishlist">

                                                                        <a class="far fa-heart" href="#" data-tooltip="tooltip" data-placement="top" title="Add to Wishlist"></a></div> #}
                </div>
            </div>
        </div>
    </div>
</div>